@code {
    private String helloText = "👋 Hello! I'm Stefan, a committed Software Engineer who is passionate about building innovative solutions that leverage cutting-edge technologies to solve complex problems.";
    
    protected override void OnAfterRender(bool firstRender)
    {
        // Always execute conditionally for loading data, otherwise this will load
        // every time the page refreshes!
        if (firstRender)
        {
            createCloud();
            startAOS();
        }
    }

    /*
    * Load the word cloud data and set properties.
    */
    public async void createCloud()
    {
        // TODO: Pull this from the database
        List<string> words = new List<string> {
          "C#", ".NET", "Java", "C", "Python", "JS", "TS", "Node.js", "Blazor",
          "MySQL", "Angular", "R", "Electron", "Xamarin", "MAUI", "HTML",
          "CSS", "Assembly", "LibGDX", "Vue.js"
        };

        Dictionary<string, string> options = new Dictionary<string, string>() {
          {"radius", "180"},
          {"maxSpeed", "slow"},
          {"initSpeed", "slow"},
          {"direction", "140"}, // right-bottom
          {"keep", "true"}      // interact with cursor move on mouse out
        };

        // Generate the word cloud
        await jsRuntime.InvokeAsync<object>("TagCloud", "#cloud", words, options);
    }


    public async void startAOS()
    {
        await jsRuntime.InvokeAsync<object>("AOS.init");
    }
}
